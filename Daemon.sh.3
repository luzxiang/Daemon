#!/bin/bash
source /etc/profile

argv="start"
type="cmd"
slp=1
cmd=$argv

if [[ $# != 0 ]];then
    argv=${1}
fi

#echo "argv=$argv"
if [[ ${argv} != *[!0-9]* ]];then
    slp=${argv}
    type="digit"
#    echo "digt..."
else
    cmd=${argv}
    type="cmd"
#    echo "cmd..."
fi

## add the servers into the PRO_DIR[], add the pro args into the PRO_ARGS[] if necessary
i=0
PRO_DIR[$i]="/root/Demo/demo/Debug/demo";PRO_ARGS[$i]="log:info";let i+=1
#PRO_DIR[$i]="/home/luzx/Demo/demo/Debug/demo1";PRO_ARGS[$i]="log:";let i+=1
#PRO_DIR[$i]="/home/luzx/Demo/demo/Debug/demo2";PRO_ARGS[$i]="log:";let i+=1

printf_date()
{
    printf "[%s] " `date "+%T"`
}

get_pid()
{
    pname=${1}

    n=`ps aux|grep -v grep|grep -v "${pname}\.log"|grep -w "${pname}"|awk -F' ' '{print $2}'`
    echo $n
}

get_pnum()
{
    pdir=${1}
    pname=`basename $pdir`

    n=`ps aux|grep -v grep|grep -v "${pname}\.log"|grep -w "${pname}"|wc -l`
    echo $n
}

pro_start()
{
    pdir=$1
    pargs=$2

    printf_date
    echo "starting..."
    nohup ${pdir} ${pargs} > /dev/null 2>&1 &
}

pro_kill()
{
    pdir=$1
    if [ ! -f "$pdir" ];then
        echo invalid :$pdir
        exit 1
    fi
    pname=`basename $pdir`

    printf_date
    echo "all ${pname} is being killed..."
    `ps aux |grep -v grep|grep "${pname}"|awk -F' ' '{print $2}'|xargs kill -9`
}

pro_restart()
{
    pdir=$1
    pargs=$2

    pro_kill ${pdir}
    pro_start ${pdir} ${pargs}
}

pro_info_show()
{
    pdir=$1

    pname=`basename $pdir`
    pid=`get_pid ${pname}`
    pro_num=`get_pnum "$pname"`

    printf_date
    echo "$pro_num $pname[$pid] is running..."
}

pro_kill_all()
{
    for pdir in ${PRO_DIR[@]};do
        pname=`basename ${pdir}`
        n=`get_pnum $pname`
        if [[ $n > 0 ]];then
            pro_kill "${pdir}"
        fi
        pro_info_show ${pdir}
    done
}

pro_running_check()
{
    for((i=0;i<${#PRO_DIR[@]};i++));do
        pro_dir=${PRO_DIR[$i]}
        pro_args=${PRO_ARGS[$i]}
        pro_name=`basename ${pro_dir}`
    
        pro_num=`get_pnum "$pro_name"`
        if [[ ${pro_num} -gt 1 ]];then
            pro_restart ${pro_dir} ${pro_args}
        elif [[ ${pro_num} -lt 1 ]];then
            pro_start ${pro_dir} ${pro_args}
        fi

        pro_info_show ${pro_dir}
    done 
}

pro_running_keep()
{
    while [[ 1 ]];do
        pro_running_check
        sleep ${slp}
    done
}

if [[ $type == "cmd" ]];then
#    echo "type == cmd"
    if [[ $cmd == "start" ]];then
        pro_running_check
    elif [[ $cmd == "restart" ]];then
        pro_kill_all
        pro_running_check
    elif [[ $cmd == "stop" ]];then
        pro_kill_all  
    fi
elif [[ $type == "digit" ]];then
#    echo "type == digit"
    pro_running_keep
fi



